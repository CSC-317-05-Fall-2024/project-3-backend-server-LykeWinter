<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>San Francisco Restaurants</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <header></header>
    <nav></nav>

    <!-- Restaurant Section -->
    <div class="restaurant-section">
        <% restaurants.forEach(restaurant => { %>
            <div class="restaurant-card" id="restaurant-<%= restaurant.id %>"> <!-- Use restaurant ID -->
                <img src="<%= restaurant.photo %>" alt="<%= restaurant.name %>">
                <h3><%= restaurant.name %></h3>
                <p><%= restaurant.phone %></p>
                <p><%= restaurant.address %></p>
                <button class="delete-button" data-id="<%= restaurant.id %>">X</button> <!-- Add data-id -->
            </div>
        <% }); %>
    </div>
    
    

    <footer></footer>
    <script src="/scripts/header.js"></script>
    <script src="/scripts/restaurantCards.js"></script> <!-- Include the delete functionality -->
</body>
</html>

